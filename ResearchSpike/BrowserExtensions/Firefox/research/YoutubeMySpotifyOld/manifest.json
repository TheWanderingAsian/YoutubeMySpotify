{
  "name": "Youtube My Spotify",
  "manifest_version": 2,
  "version": "0.0.1",
  "description": "Youtubes your Spotify",
  "icons": {
    "16":  "resources/icon_032.png",
    "32":  "resources/icon_032.png",
    "48":  "resources/icon_048.png",
    "128": "resources/icon_128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "youtube@myspotify.com"
    }
  },

  "content_security_policy": "script-src 'self' https://www.youtube.com/iframe_api https://static.doubleclick.net/instream/ad_status.js https://s.ytimg.com/yts/jsbin/www-widgetapi-vflPBjLfx/www-widgetapi.js https://googleads.g.doubleclick.net/pagead/id https://api.spotify.com/v1/*; object-src 'self'",

  "browser_action": {
    "default_icon": "resources/icon_032.png"
  },

  "background":{
    "scripts": [ "background.js" ]
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-script.js"]
    }
  ],

  "permissions": [ "tabs", "identity"],

  "homepage_url": "https://github.com/theWebby"
}
